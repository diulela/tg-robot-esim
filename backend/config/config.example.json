{
  "telegram": {
    "bot_token": "${TELEGRAM_BOT_TOKEN}",
    "webhook_url": "",
    "timeout": "60s",
    "debug": false
  },
  "database": {
    "type": "sqlite",
    "dsn": "bot.db",
    "max_connections": 10,
    "max_idle_conns": 5,
    "conn_max_life": "1h"
  },
  "blockchain": {
    "tron_api_key": "${TRON_API_KEY}",
    "tron_endpoint": "https://api.trongrid.io",
    "monitor_interval": "30s",
    "required_confirmations": 12,
    "max_block_delay": 100,
    "wallet_address": ""
  },
  "logging": {
    "level": "info",
    "file": "bot.log",
    "max_size": 100,
    "max_age": 30,
    "compress": true
  },
  "server": {
    "port": 8080,
    "read_timeout": "30s",
    "write_timeout": "30s",
    "idle_timeout": "120s"
  },
  "esim_sdk": {
    "api_key": "xxx",
    "api_secret": "xxx",
    "endpoint" : "https://api.xxx.com"
  }
}